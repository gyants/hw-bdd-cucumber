<h2>Write a Review for <%= @movie.title %></h2>

<%= form_for [@movie, @review] do |f| %>
  <div class="field">
    <%= f.label :content, "Your Review" %><br>
    <%= f.text_area :content, class: 'form-control', rows: 8 %>
  </div>

  <div class="field">
    <%= f.label :rating, "Rating (1-5)" %><br>
    <%= f.number_field :rating, class: 'form-control', min: 1, max: 5 %>
  </div>

  <div class="actions">
    <%= f.submit "Post Review", class: 'btn btn-primary' %>
  </div>
<% end %>
